<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Government -->
    <route url="/V1/government/:governmentId" method="GET">
        <service class="Chilliapple\Governments\Api\GovernmentRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Chilliapple_Governments::governments_government"/>
        </resources>
    </route>
    <route url="/V1/government/search" method="GET">
        <service class="Chilliapple\Governments\Api\GovernmentListRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Chilliapple_Governments::governments_government"/>
        </resources>
    </route>
    <route url="/V1/government" method="POST">
        <service class="Chilliapple\Governments\Api\GovernmentRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Chilliapple_Governments::governments_government"/>
        </resources>
    </route>
    <route url="/V1/government/:governmentId" method="PUT">
        <service class="Chilliapple\Governments\Api\GovernmentRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Chilliapple_Governments::governments_government"/>
        </resources>
    </route>
    <route url="/V1/government/:governmentId" method="DELETE">
        <service class="Chilliapple\Governments\Api\GovernmentRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Chilliapple_Governments::governments_government"/>
        </resources>
    </route>
</routes>
